@model PortfolioHarlod.Viewmodels.BlogItemListViewmodel
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>

<div class="container">
    <div class="mt-5">
        <h1 class="display-1 text-center" style="font-family: 'Montserrat', sans-serif;">
            Hi, My name is Harlod Bombala
        </h1>
        <p class="p-2 text-center" style="font-family: 'Montserrat', sans-serif;">
            And welcome to my amazing portfolio :)
        </p>
    </div>

    <div class="row mt-4">
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-header alert alert-success" style="font-family: 'Montserrat', sans-serif;">
                    Personal Interests
                </div>
                <div class="card-body" style="font-family: 'Montserrat', sans-serif;">
                    <ul>
                        <li>Working out</li>
                        <li>Basketball</li>
                        <li>Listening to music</li>
                        <li>Reading</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6 text-center mb-4">
            <img src="@Url.Content("Images/Persona_image.jpg")" class="img-fluid w-100 h-auto rounded" alt="Responsive image">
        </div>

        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-header alert-success" style="font-family: 'Montserrat', sans-serif;">
                    Professional Skills
                </div>
                <div class="card-body" style="font-family: 'Montserrat', sans-serif;">
                    <ul class="skills-list">
                        <li><img src="~/Images/github.png" alt="GitHub"></li>
                        <li><img src="~/Images/java.png" alt="Java"></li>
                        <li><img src="~/Images/c-sharp.png" alt="C#"></li>
                        <li><img src="~/Images/php.png" alt="PHP"></li>
                        <li><img src="~/Images/Laravel.png" alt="Laravel"></li>
                        <li><img src="~/Images/python.png" alt="Python"></li>
                        <li><img src="~/Images/mysql.png" alt="SQL"></li>
                        <li><img src="~/Images/trello.png" alt="Trello"></li>
                        <li><img src="~/Images/jira.png" alt="Jira"></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <p class="p-2 text-center" style="font-family: 'Montserrat', sans-serif;">
                Featured projects I have worked on
            </p>
        </div>
    </div>

    <div class="row">
        @foreach (var blogItem in Model.blogItems)
        {
            <div class="col-md-4 mb-4">
                <a href="@blogItem.Url" class="text-decoration-none" style="color: inherit;">
                    <div class="card h-100">
                        <img src="@Url.Content(blogItem.imageUrl)" class="card-img-top" alt="@blogItem.title">
                        <div class="card-body">
                            <h5 class="card-title" style="font-family: 'Montserrat', sans-serif;">@blogItem.title</h5>
                            <p class="card-text">@blogItem.creationDate.ToString("dd, MMMM, yyyy")</p>
                            <p class="card-text">@blogItem.description</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
